// Landing page placeholder
// This file is replaced by the CLI when custom landing is configured
// When no custom landing is set, redirect to the first docs page
import { getConfigFile, getNavigation } from '../utils/config';

const config = await getConfigFile();
const navigation = await getNavigation();

// Find the first docs page from navigation
let firstDocsPage = '/introduction';
if (navigation.sidebar && navigation.sidebar.length > 0) {
  const firstGroup = navigation.sidebar[0];
  if (firstGroup.items && firstGroup.items.length > 0) {
    firstDocsPage = firstGroup.items[0].href || '/introduction';
  }
}

return Astro.redirect(firstDocsPage);
