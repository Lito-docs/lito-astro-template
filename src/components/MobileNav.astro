---
/**
 * MobileNav - Mobile navigation drawer
 * Triggered by hamburger menu in Header
 */
import { getConfigFile, getLocalizedSidebar } from '../utils/config';
import { getI18nConfig, getLocaleFromPath } from '../utils/i18n';
import { createLink, isLinkActive } from '../utils/url';
import Icon from './Icon.astro';
import VersionSwitcher from './VersionSwitcher.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';

const config = await getConfigFile();
const i18nConfig = await getI18nConfig();
const currentPath = Astro.url.pathname;

// Get current locale from URL
const currentLocale = getLocaleFromPath(currentPath, i18nConfig.locales) || i18nConfig.defaultLocale;

// Get locale-specific sidebar (falls back to default if not found)
const sidebar = getLocalizedSidebar(currentLocale, i18nConfig.defaultLocale);

// Navbar config
const { navbar } = config.navigation;
const navTabs = navbar.tabs;
const hasTabs = navTabs && navTabs.length > 0;
const social = navbar.social;

// For localized content, we need to adjust hrefs to include locale prefix
const localizeHref = (href: string) => {
  if (currentLocale === i18nConfig.defaultLocale) {
    return href;
  }
  // Add locale prefix if not already present
  if (!href.startsWith(`/${currentLocale}/`) && !href.startsWith('http')) {
    return `/${currentLocale}${href.startsWith('/') ? href : '/' + href}`;
  }
  return href;
};

// Check if a link is active
const isActive = (href: string) => {
  const fullHref = createLink(localizeHref(href));
  return isLinkActive(fullHref, currentPath);
};

const isTabActive = (tab: { href: string; match?: string }) => {
  const match = tab.match || tab.href;
  const normalizedPath = currentPath.replace(/\/$/, '') || '/';
  const normalizedMatch = match.replace(/\/$/, '') || '/';
  return normalizedPath === normalizedMatch || normalizedPath.startsWith(normalizedMatch + '/');
};
---

<div id="mobile-nav" class="mobile-nav">
  <div class="mobile-nav-backdrop"></div>
  <div class="mobile-nav-panel">
    <div class="mobile-nav-header">
      <span class="text-base font-semibold text-foreground">{config.metadata.name}</span>
      <button id="mobile-nav-close" class="p-2 text-muted-foreground hover:text-foreground rounded" aria-label="Close menu">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M18 6 6 18"></path>
          <path d="m6 6 12 12"></path>
        </svg>
      </button>
    </div>

    {/* Version & Language switchers */}
    <div class="mobile-nav-switchers">
      <VersionSwitcher />
      <LanguageSwitcher />
    </div>

    {/* Section tabs as scrollable row */}
    {hasTabs && (
      <div class="mobile-nav-tabs">
        {navTabs.map((tab) => (
          <a
            href={createLink(tab.href)}
            class:list={['mobile-nav-tab', { 'mobile-nav-tab-active': isTabActive(tab) }]}
          >
            {tab.icon && <Icon name={tab.icon} size={14} />}
            <span>{tab.label}</span>
          </a>
        ))}
      </div>
    )}

    <nav class="mobile-nav-content">
      {/* Navbar dropdown items as collapsible sections */}
      {navbar.links?.some(l => l.type === 'dropdown') && (
        <div class="mobile-nav-group">
          {navbar.links.filter(l => l.type === 'dropdown').map((link) => (
            <div class="mobile-nav-dropdown" data-mobile-dropdown>
              <button class="mobile-nav-dropdown-trigger" aria-expanded="false">
                <span>{link.label}</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mobile-dropdown-chevron">
                  <path d="m6 9 6 6 6-6"/>
                </svg>
              </button>
              <div class="mobile-nav-dropdown-items" hidden>
                {link.items?.map((item) => (
                  <a href={createLink(item.href)} class="mobile-nav-link">
                    {item.label}
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      )}

      {sidebar.map((group: any) => (
        <div class="mobile-nav-group">
          <div class="mobile-nav-group-title">{group.label}</div>
          <ul class="mobile-nav-list">
            {group.items?.map((item: any) => {
              const href = item.href || `/${item.slug}`;
              const fullHref = createLink(localizeHref(href));
              const active = isActive(href);
              return (
                <li>
                  <a
                    href={fullHref}
                    class:list={['mobile-nav-link', { 'mobile-nav-link-active': active }]}
                    aria-current={active ? 'page' : undefined}
                  >
                    {item.label}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
      ))}
    </nav>

    {/* Social links at bottom */}
    {(social?.github || social?.twitter || social?.discord) && (
      <div class="mobile-nav-footer">
        {social.github && (
          <a href={social.github.href} class="mobile-social-link" target="_blank" rel="noopener noreferrer" title="GitHub">
            <Icon name="simple-icons:github" size={18} />
          </a>
        )}
        {social.twitter && (
          <a href={social.twitter.href} class="mobile-social-link" target="_blank" rel="noopener noreferrer" title="Twitter">
            <Icon name="simple-icons:x" size={16} />
          </a>
        )}
        {social.discord && (
          <a href={social.discord.href} class="mobile-social-link" target="_blank" rel="noopener noreferrer" title="Discord">
            <Icon name="simple-icons:discord" size={18} />
          </a>
        )}
      </div>
    )}
  </div>
</div>

<style>
  @reference "../styles/global.css";
  .mobile-nav {
    @apply fixed inset-0 z-[60] pointer-events-none;
  }

  .mobile-nav.open {
    @apply pointer-events-auto;
  }

  .mobile-nav-backdrop {
    @apply absolute inset-0 bg-background/80 backdrop-blur-sm opacity-0 transition-opacity duration-300;
  }

  .mobile-nav.open .mobile-nav-backdrop {
    @apply opacity-100;
  }

  .mobile-nav-panel {
    @apply absolute top-0 left-0 h-full w-80 max-w-[85vw] bg-background border-r border-border;
    @apply transform -translate-x-full transition-transform duration-300 ease-out;
    @apply flex flex-col;
  }

  .mobile-nav.open .mobile-nav-panel {
    @apply translate-x-0;
  }

  .mobile-nav-header {
    @apply flex items-center justify-between p-4 border-b border-border;
  }

  /* Switchers row */
  .mobile-nav-switchers {
    @apply flex items-center gap-2 px-3 py-2 border-b border-border;
  }

  .mobile-nav-switchers:empty {
    @apply hidden;
  }

  /* Override dropdown positioning inside mobile nav */
  .mobile-nav-switchers .version-dropdown {
    left: 0;
    right: auto;
  }

  .mobile-nav-switchers .language-switcher [data-lang-dropdown] {
    left: 0;
    right: auto;
  }

  /* Tabs row */
  .mobile-nav-tabs {
    @apply flex items-center gap-1 px-3 py-2 overflow-x-auto border-b border-border;
    scrollbar-width: none;
  }

  .mobile-nav-tabs::-webkit-scrollbar {
    display: none;
  }

  .mobile-nav-tab {
    @apply flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium rounded-md whitespace-nowrap;
    @apply transition-colors duration-150;
    color: var(--muted-foreground);
    text-decoration: none;
  }

  .mobile-nav-tab:hover {
    color: var(--foreground);
    background: var(--accent);
  }

  .mobile-nav-tab-active {
    color: var(--foreground);
    background: var(--accent);
  }

  .mobile-nav-content {
    @apply flex-1 overflow-y-auto p-4 space-y-6;
  }

  .mobile-nav-group-title {
    @apply text-xs font-medium text-muted-foreground uppercase tracking-wider mb-2;
  }

  .mobile-nav-list {
    @apply space-y-0.5 list-none p-0 m-0;
  }

  .mobile-nav-link {
    @apply block px-3 py-2 text-sm text-muted-foreground rounded;
    @apply hover:text-foreground hover:bg-accent transition-colors;
  }

  .mobile-nav-link-active {
    @apply text-foreground font-medium;
  }

  /* Dropdown sections */
  .mobile-nav-dropdown-trigger {
    @apply w-full flex items-center justify-between px-3 py-2 text-sm font-medium;
    @apply text-muted-foreground rounded transition-colors duration-150;
  }

  .mobile-nav-dropdown-trigger:hover {
    @apply text-foreground bg-accent;
  }

  .mobile-dropdown-chevron {
    @apply transition-transform duration-150;
    opacity: 0.5;
  }

  .mobile-nav-dropdown.open .mobile-dropdown-chevron {
    transform: rotate(180deg);
  }

  .mobile-nav-dropdown-items {
    @apply pl-3 space-y-0.5 mt-0.5;
  }

  /* Social footer */
  .mobile-nav-footer {
    @apply flex items-center gap-2 px-4 py-3 border-t border-border;
  }

  .mobile-social-link {
    @apply flex items-center justify-center w-8 h-8 rounded-md;
    @apply transition-colors duration-150;
    color: var(--muted-foreground);
  }

  .mobile-social-link:hover {
    color: var(--foreground);
    background: var(--accent);
  }
</style>

<script>
  function initMobileNav() {
    const mobileNav = document.getElementById('mobile-nav');
    const menuBtn = document.getElementById('mobile-menu-btn');
    const closeBtn = document.getElementById('mobile-nav-close');
    const backdrop = mobileNav?.querySelector('.mobile-nav-backdrop');

    function openNav() {
      mobileNav?.classList.add('open');
      document.body.style.overflow = 'hidden';
    }

    function closeNav() {
      mobileNav?.classList.remove('open');
      document.body.style.overflow = '';
    }

    menuBtn?.addEventListener('click', openNav);
    closeBtn?.addEventListener('click', closeNav);
    backdrop?.addEventListener('click', closeNav);

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && mobileNav?.classList.contains('open')) {
        closeNav();
      }
    });

    // Close when navigating
    mobileNav?.querySelectorAll('.mobile-nav-link, .mobile-nav-tab').forEach((link) => {
      link.addEventListener('click', closeNav);
    });

    // Mobile dropdown toggles
    mobileNav?.querySelectorAll('[data-mobile-dropdown]').forEach((dropdown) => {
      const trigger = dropdown.querySelector('.mobile-nav-dropdown-trigger');
      const items = dropdown.querySelector('.mobile-nav-dropdown-items');
      trigger?.addEventListener('click', () => {
        const isOpen = dropdown.classList.toggle('open');
        trigger.setAttribute('aria-expanded', String(isOpen));
        if (items) {
          (items as HTMLElement).hidden = !isOpen;
        }
      });
    });
  }

  initMobileNav();
  document.addEventListener('astro:page-load', initMobileNav);
</script>
