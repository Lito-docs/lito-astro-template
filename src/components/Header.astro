---
import { getConfigFile } from '../utils/config';
import { createLink } from '../utils/url';
import ThemeToggle from './ThemeToggle.astro';
import Icon from './Icon.astro';

const config = await getConfigFile();
const { navbar } = config.navigation;
---

<header class="topbar">
  <div class="max-w-full mx-auto px-4 md:px-6 py-3 flex items-center justify-between">
    <!-- Mobile menu button -->
    <button
      id="mobile-menu-btn"
      class="mobile-menu-btn md:hidden"
      aria-label="Open menu"
    >
      <Icon name="lucide:menu" size={20} />
    </button>

    <!-- Logo -->
    <div class="flex items-center gap-4">
      <a href={createLink(config.branding.logo.href)} class="logo-link">
        <Icon name="lucide:book-open" size={24} class="text-primary-500" />
        <h1 class="logo-text hidden sm:block">
          {config.metadata.name}
        </h1>
      </a>
    </div>

    <!-- Desktop nav -->
    <nav class="hidden md:flex items-center gap-1">
      {navbar.links?.map((link) => (
        <a
          href={createLink(link.href)}
          class="nav-link"
          target={link.href.startsWith('http') ? '_blank' : undefined}
          rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
        >
          {link.label}
        </a>
      ))}
    </nav>

    <!-- Actions -->
    <div class="flex items-center gap-2 sm:gap-3">
      <!-- Mobile search button -->
      <button
        onclick="window.openSearchModal && window.openSearchModal()"
        class="mobile-search-btn sm:hidden"
        aria-label="Search"
      >
        <Icon name="lucide:search" size={18} />
      </button>

      <!-- Desktop search trigger -->
      <button
        id="search-trigger"
        onclick="window.openSearchModal && window.openSearchModal()"
        class="search-trigger hidden sm:flex"
      >
        <Icon name="lucide:search" size={14} />
        <span>Search</span>
        <kbd class="search-kbd">âŒ˜K</kbd>
      </button>

      <ThemeToggle />

      {navbar.cta && (
        <a href={createLink(navbar.cta.href)} class="cta-button hidden sm:inline-flex">
          {navbar.cta.label}
        </a>
      )}
    </div>
  </div>
</header>

<style>
  @reference "../styles/global.css";

  .mobile-menu-btn {
    @apply p-2 text-muted-foreground rounded-lg;
    @apply transition-all duration-150;
  }

  .mobile-menu-btn:hover {
    @apply text-foreground bg-accent;
  }

  .logo-link {
    @apply flex items-center gap-3;
    @apply transition-all duration-200;
  }

  .logo-link:hover {
    transform: translateY(-1px);
    opacity: 0.85;
  }

  .logo-text {
    @apply text-lg font-bold text-foreground m-0 tracking-tight;
  }

  .nav-link {
    @apply text-sm font-medium text-muted-foreground;
    @apply px-3 py-2 rounded-md;
    @apply transition-all duration-150;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: var(--primary-500);
    border-radius: 1px;
    transition: width 200ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-link:hover {
    @apply text-foreground;
  }

  .nav-link:hover::after {
    width: 60%;
  }

  .search-trigger {
    @apply items-center gap-2 px-3 py-2 text-sm text-muted-foreground;
    @apply rounded-lg border border-border;
    @apply transition-all duration-200;
    background: var(--input);
  }

  .search-trigger:hover {
    @apply border-primary-400 text-foreground;
    background: var(--card);
    box-shadow: 0 0 0 3px var(--primary-100);
  }

  .search-kbd {
    @apply px-1.5 py-0.5 text-[10px] font-mono rounded;
    background: var(--muted);
    border: 1px solid var(--border);
  }

  .mobile-search-btn {
    @apply p-2 rounded-lg;
    @apply transition-all duration-150;
    color: var(--muted-foreground);
    background: var(--input);
    border: 1px solid var(--border);
  }

  .mobile-search-btn:hover {
    color: var(--foreground);
    background: var(--card);
    border-color: var(--primary-400);
  }

  .mobile-search-btn:active {
    transform: scale(0.95);
  }
</style>
