---
import { getConfigFile } from '../utils/config';
import { createLink } from '../utils/url';
import ThemeToggle from './ThemeToggle.astro';
import NavDropdown from './NavDropdown.astro';
import GitHubStars from './GitHubStars.astro';
import Icon from './Icon.astro';

const config = await getConfigFile();
const { navbar } = config.navigation;
const social = navbar.social;
const hasTabs = navbar.tabs && navbar.tabs.length > 0;
---

<header class="topbar">
  <div class="topbar-inner">
    <!-- Mobile menu button -->
    <button
      id="mobile-menu-btn"
      class="mobile-menu-btn md:hidden"
      aria-label="Open menu"
    >
      <Icon name="lucide:menu" size={20} />
    </button>

    <!-- Logo -->
    <div class="flex items-center gap-4">
      <a href={createLink(config.branding.logo.href)} class="logo-link">
        <Icon name="lucide:book-open" size={22} class="text-primary-500" />
        <h1 class="logo-text hidden sm:block">
          {config.metadata.name}
        </h1>
      </a>
    </div>

    <!-- Desktop nav -->
    <nav class="hidden md:flex items-center gap-0.5">
      {navbar.links?.map((link) => (
        link.type === 'dropdown' && link.items ? (
          <NavDropdown link={link} />
        ) : (
          <a
            href={createLink(link.href || '#')}
            class="nav-link"
            target={link.href?.startsWith('http') ? '_blank' : undefined}
            rel={link.href?.startsWith('http') ? 'noopener noreferrer' : undefined}
          >
            {link.label}
          </a>
        )
      ))}
    </nav>

    <!-- Actions -->
    <div class="flex items-center gap-2 sm:gap-2.5">
      <!-- Mobile search button -->
      <button
        onclick="window.openSearchModal && window.openSearchModal()"
        class="mobile-search-btn sm:hidden"
        aria-label="Search"
      >
        <Icon name="lucide:search" size={18} />
      </button>

      <!-- Desktop search trigger -->
      <button
        id="search-trigger"
        onclick="window.openSearchModal && window.openSearchModal()"
        class="search-trigger hidden sm:flex"
      >
        <Icon name="lucide:search" size={14} />
        <span class="search-placeholder">Search docs...</span>
        <kbd class="search-kbd">âŒ˜K</kbd>
      </button>

      <!-- Social links -->
      {social?.github && (
        <a href={social.github.href} class="social-link" target="_blank" rel="noopener noreferrer" title="GitHub">
          <Icon name="simple-icons:github" size={18} />
          {social.github.showStars && <GitHubStars href={social.github.href} />}
        </a>
      )}

      <ThemeToggle />

      {navbar.cta && (
        <a href={createLink(navbar.cta.href)} class="cta-button hidden sm:inline-flex">
          {navbar.cta.label}
        </a>
      )}
    </div>
  </div>
</header>

<style>
  @reference "../styles/global.css";

  .topbar-inner {
    @apply max-w-full mx-auto px-4 md:px-6 py-3 flex items-center justify-between;
  }

  .mobile-menu-btn {
    @apply p-2 text-muted-foreground rounded-md;
    @apply transition-colors duration-150;
  }

  .mobile-menu-btn:hover {
    @apply text-foreground bg-accent;
  }

  .logo-link {
    @apply flex items-center gap-2.5;
    @apply transition-opacity duration-150;
  }

  .logo-link:hover {
    opacity: 0.8;
  }

  .logo-text {
    @apply text-base font-semibold text-foreground m-0 tracking-tight;
  }

  .nav-link {
    @apply text-sm font-medium text-muted-foreground;
    @apply px-3 py-2 rounded-md;
    @apply transition-colors duration-150;
  }

  .nav-link:hover {
    @apply text-foreground;
  }

  .search-trigger {
    @apply items-center gap-2 px-3 py-1.5 text-sm text-muted-foreground;
    @apply rounded-md border border-border;
    @apply transition-colors duration-150;
    background: var(--input);
    min-width: 12rem;
  }

  .search-trigger:hover {
    @apply text-foreground;
    border-color: var(--gray-300);
  }

  .search-placeholder {
    @apply flex-1 text-left;
    font-size: 0.8125rem;
  }

  .search-kbd {
    @apply px-1.5 py-0.5 text-[10px] font-mono rounded;
    background: var(--muted);
    border: 1px solid var(--border);
  }

  .social-link {
    @apply hidden sm:flex items-center gap-1.5 p-2 rounded-md;
    @apply transition-colors duration-150;
    color: var(--muted-foreground);
  }

  .social-link:hover {
    color: var(--foreground);
  }

  .mobile-search-btn {
    @apply p-2 rounded-md;
    @apply transition-colors duration-150;
    color: var(--muted-foreground);
    background: var(--input);
    border: 1px solid var(--border);
  }

  .mobile-search-btn:hover {
    color: var(--foreground);
  }
</style>
