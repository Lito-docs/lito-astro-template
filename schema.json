{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Astro Docs Configuration",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "url": { "type": "string" },
        "version": { "type": "string" }
      },
      "required": ["name"]
    },
    "branding": {
      "type": "object",
      "properties": {
        "logo": {
          "type": "object",
          "properties": {
            "light": { "type": "string" },
            "dark": { "type": "string" },
            "href": { "type": "string" }
          }
        },
        "favicon": { "type": "string" },
        "colors": {
          "type": "object",
          "properties": {
            "primary": { "type": "string" },
            "secondary": { "type": "string" },
            "accent": { "type": "string" },
            "background": { "type": "string" },
            "text": { "type": "string" }
          }
        },
        "fonts": {
          "type": "object",
          "properties": {
            "body": { "type": "string" },
            "code": { "type": "string" }
          }
        }
      }
    },
    "theme": {
      "type": "object",
      "properties": {
        "mode": { "type": "string", "enum": ["light", "dark", "auto"] },
        "defaultDark": { "type": "boolean" },
        "primaryColor": { "type": "string" },
        "accentColor": { "type": "string" }
      }
    },
    "navigation": {
      "type": "object",
      "properties": {
        "navbar": {
          "type": "object",
          "properties": {
            "links": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "label": { "type": "string" },
                  "href": { "type": "string" }
                },
                "required": ["label", "href"]
              }
            },
            "cta": {
              "type": "object",
              "properties": {
                "label": { "type": "string" },
                "href": { "type": "string" },
                "type": { "type": "string" }
              }
            }
          }
        },
        "sidebar": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "icon": { "type": "string" },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": { "type": "string" },
                    "slug": { "type": "string" },
                    "icon": { "type": "string" }
                  },
                  "required": ["label", "slug"]
                }
              }
            },
            "required": ["label"]
          }
        }
      }
    },
    "footer": {
      "type": "object",
      "properties": {
        "socials": { "type": "object" },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": { "type": "string" },
                    "href": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "search": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "provider": { "type": "string" },
        "placeholder": { "type": "string" }
      }
    },
    "integrations": {
      "type": "object",
      "properties": {
        "analytics": { "type": ["object", "null"] },
        "feedback": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" }
          }
        }
      }
    },
    "seo": {
      "type": "object",
      "description": "SEO configuration for the documentation site",
      "properties": {
        "ogImage": {
          "type": "string",
          "description": "Default Open Graph image URL for pages without a custom ogImage"
        },
        "twitterHandle": {
          "type": "string",
          "description": "Twitter handle for twitter:creator meta tag (e.g., @username)"
        },
        "twitterSite": {
          "type": "string",
          "description": "Twitter site handle, defaults to twitterHandle if not specified"
        },
        "defaultAuthor": {
          "type": "string",
          "description": "Default author name for article metadata"
        },
        "defaultKeywords": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Default keywords applied to all pages"
        },
        "enableJsonLd": {
          "type": "boolean",
          "default": true,
          "description": "Enable JSON-LD structured data generation"
        },
        "organizationName": {
          "type": "string",
          "description": "Organization name for JSON-LD publisher info"
        },
        "organizationLogo": {
          "type": "string",
          "description": "Organization logo URL for JSON-LD structured data"
        },
        "articleType": {
          "type": "string",
          "enum": ["TechArticle", "Article"],
          "default": "TechArticle",
          "description": "Default article type for JSON-LD: TechArticle for technical docs, Article for general"
        },
        "autoCanonical": {
          "type": "boolean",
          "default": true,
          "description": "Automatically generate canonical URLs for pages"
        },
        "enableBreadcrumbs": {
          "type": "boolean",
          "default": true,
          "description": "Enable breadcrumb JSON-LD structured data"
        }
      }
    }
  }
}
