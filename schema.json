{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Astro Docs Configuration",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "url": { "type": "string" },
        "version": { "type": "string" }
      },
      "required": ["name"]
    },
    "branding": {
      "type": "object",
      "properties": {
        "logo": {
          "type": "object",
          "properties": {
            "light": { "type": "string" },
            "dark": { "type": "string" },
            "href": { "type": "string" }
          }
        },
        "favicon": { "type": "string" },
        "colors": {
          "type": "object",
          "properties": {
            "primary": { "type": "string" },
            "secondary": { "type": "string" },
            "accent": { "type": "string" },
            "background": { "type": "string" },
            "text": { "type": "string" }
          }
        },
        "fonts": {
          "type": "object",
          "properties": {
            "body": { "type": "string" },
            "code": { "type": "string" }
          }
        }
      }
    },
    "theme": {
      "type": "object",
      "properties": {
        "mode": { "type": "string", "enum": ["light", "dark", "auto"] },
        "defaultDark": { "type": "boolean" },
        "primaryColor": { "type": "string" },
        "accentColor": { "type": "string" }
      }
    },
    "navigation": {
      "type": "object",
      "description": "Navigation configuration. Supports locale-specific sidebars using 'sidebar.{locale}' keys (e.g., 'sidebar.es', 'sidebar.fr')",
      "properties": {
        "navbar": {
          "type": "object",
          "properties": {
            "links": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "label": { "type": "string" },
                  "href": { "type": "string" },
                  "type": {
                    "type": "string",
                    "enum": ["link", "dropdown"],
                    "default": "link",
                    "description": "Link type: 'link' for flat navigation, 'dropdown' for expandable menu"
                  },
                  "items": {
                    "type": "array",
                    "description": "Dropdown items (only used when type is 'dropdown')",
                    "items": {
                      "type": "object",
                      "properties": {
                        "label": { "type": "string" },
                        "href": { "type": "string" },
                        "description": { "type": "string" },
                        "icon": { "type": "string" }
                      },
                      "required": ["label", "href"]
                    }
                  }
                },
                "required": ["label"]
              }
            },
            "tabs": {
              "type": "array",
              "description": "Section tabs displayed below the topbar for Stripe-style section navigation",
              "items": {
                "type": "object",
                "properties": {
                  "label": { "type": "string" },
                  "href": { "type": "string" },
                  "icon": { "type": "string" },
                  "match": {
                    "type": "string",
                    "description": "URL pattern to match for active state (e.g., '/docs' matches /docs/*)"
                  },
                  "groups": { "type": "array", "items": { "type": "string" }, "description": "Sidebar group labels to match for active state" }
                },
                "required": ["label", "href"]
              }
            },
            "social": {
              "type": "object",
              "description": "Social links displayed in the navbar actions area",
              "properties": {
                "github": {
                  "type": "object",
                  "properties": {
                    "href": { "type": "string" },
                    "showStars": { "type": "boolean", "default": false }
                  },
                  "required": ["href"]
                },
                "twitter": {
                  "type": "object",
                  "properties": {
                    "href": { "type": "string" }
                  },
                  "required": ["href"]
                },
                "discord": {
                  "type": "object",
                  "properties": {
                    "href": { "type": "string" }
                  },
                  "required": ["href"]
                }
              }
            },
            "cta": {
              "type": "object",
              "properties": {
                "label": { "type": "string" },
                "href": { "type": "string" },
                "type": { "type": "string" }
              }
            }
          }
        },
        "anchors": {
          "type": "array",
          "description": "Bottom sidebar anchor links for switching between documentation sections",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string", "description": "Display label for the anchor" },
              "href": { "type": "string", "description": "Link URL or path" },
              "icon": { "type": "string", "description": "Iconify icon name (e.g., 'lucide:book')" },
              "color": { "type": "string", "description": "Custom color for the icon/active state" },
              "external": { "type": "boolean", "default": false, "description": "Open link in new tab" },
              "groups": { "type": "array", "items": { "type": "string" }, "description": "Sidebar group labels to show when this anchor is active" }
            },
            "required": ["label", "href"]
          }
        },
        "sidebar": {
          "type": "array",
          "description": "Default sidebar navigation (used for default locale and as fallback)",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "icon": { "type": "string" },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": { "type": "string" },
                    "slug": { "type": "string" },
                    "href": { "type": "string" },
                    "icon": { "type": "string" }
                  },
                  "required": ["label"]
                }
              }
            },
            "required": ["label"]
          }
        }
      },
      "additionalProperties": {
        "description": "Locale-specific sidebars (e.g., 'sidebar.es', 'sidebar.fr')",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "label": { "type": "string" },
            "icon": { "type": "string" },
            "items": { "type": "array" }
          }
        }
      }
    },
    "footer": {
      "type": "object",
      "description": "Footer configuration for the documentation site",
      "properties": {
        "logo": {
          "type": "object",
          "description": "Footer logo configuration (uses branding logo if not specified)",
          "properties": {
            "src": { "type": "string", "description": "Logo image URL or path" },
            "alt": { "type": "string", "description": "Alt text for the logo" },
            "href": { "type": "string", "description": "Link when clicking the logo" },
            "height": { "type": "number", "description": "Logo height in pixels", "default": 32 }
          }
        },
        "tagline": {
          "type": "string",
          "description": "Company tagline or description displayed under the logo"
        },
        "copyright": {
          "type": "string",
          "description": "Custom copyright text. Use {year} placeholder for current year (e.g., 'Â© {year} Acme Inc. All rights reserved.')"
        },
        "showBranding": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Built with Lito' branding in the footer"
        },
        "showVersion": {
          "type": "boolean",
          "default": true,
          "description": "Show the documentation version in the footer"
        },
        "layout": {
          "type": "string",
          "enum": ["full", "compact", "centered"],
          "default": "full",
          "description": "Footer layout variant: 'full' (logo + links + socials), 'compact' (minimal), 'centered' (centered content)"
        },
        "socials": {
          "type": "object",
          "description": "Social media links. Keys are platform names, values are URLs.",
          "properties": {
            "github": { "type": "string", "description": "GitHub profile or repo URL" },
            "twitter": { "type": "string", "description": "Twitter/X profile URL" },
            "discord": { "type": "string", "description": "Discord invite URL" },
            "linkedin": { "type": "string", "description": "LinkedIn profile or company URL" },
            "youtube": { "type": "string", "description": "YouTube channel URL" },
            "mastodon": { "type": "string", "description": "Mastodon profile URL" },
            "bluesky": { "type": "string", "description": "Bluesky profile URL" },
            "reddit": { "type": "string", "description": "Reddit community URL" },
            "slack": { "type": "string", "description": "Slack workspace invite URL" },
            "email": { "type": "string", "description": "Email address (mailto: link)" }
          },
          "additionalProperties": { "type": "string" }
        },
        "links": {
          "type": "array",
          "description": "Footer link sections organized in columns",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string", "description": "Section heading" },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "label": { "type": "string", "description": "Link text" },
                    "href": { "type": "string", "description": "Link URL" },
                    "external": { "type": "boolean", "description": "Open in new tab", "default": false }
                  },
                  "required": ["label", "href"]
                }
              }
            },
            "required": ["title", "items"]
          }
        },
        "bottomLinks": {
          "type": "array",
          "description": "Additional links shown in the bottom bar (e.g., Privacy Policy, Terms)",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "href": { "type": "string" }
            },
            "required": ["label", "href"]
          }
        }
      }
    },
    "search": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "provider": { "type": "string" },
        "placeholder": { "type": "string" }
      }
    },
    "integrations": {
      "type": "object",
      "properties": {
        "analytics": { "type": ["object", "null"] },
        "feedback": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "webhookUrl": { "type": "string", "description": "Optional POST endpoint for feedback data" }
          }
        },
        "editPage": {
          "type": "object",
          "description": "Edit page link configuration",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "pattern": {
              "type": "string",
              "description": "URL pattern with {path} placeholder (e.g., 'https://github.com/org/repo/edit/main/docs/{path}')"
            }
          }
        },
        "lastUpdated": {
          "type": "object",
          "description": "Last updated date display configuration",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "format": {
              "type": "string",
              "enum": ["long", "short", "relative"],
              "default": "long",
              "description": "Date format: 'long' (January 1, 2025), 'short' (Jan 1, 2025), 'relative' (2 days ago)"
            }
          }
        },
        "copyPage": {
          "type": "object",
          "description": "Copy page and AI integration settings",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable the copy page floating action button"
            },
            "position": {
              "type": "string",
              "enum": ["bottom-right", "bottom-left", "top-right", "top-left"],
              "default": "bottom-right",
              "description": "Position of the floating action button"
            },
            "aiProviders": {
              "type": "array",
              "description": "AI providers to show in the menu",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Provider identifier (chatgpt, claude, gemini, perplexity, or custom)"
                  },
                  "label": {
                    "type": "string",
                    "description": "Display label for the provider"
                  },
                  "icon": {
                    "type": "string",
                    "description": "Icon name from Iconify (e.g., simple-icons:openai)"
                  }
                },
                "required": ["name", "label", "icon"]
              }
            },
            "contextPrompt": {
              "type": "string",
              "default": "I'm reading this documentation page and would like your help understanding it:",
              "description": "Prompt prefix when opening in AI tools"
            }
          }
        }
      }
    },
    "seo": {
      "type": "object",
      "description": "SEO configuration for the documentation site",
      "properties": {
        "ogImage": {
          "type": "string",
          "description": "Default Open Graph image URL for pages without a custom ogImage"
        },
        "twitterHandle": {
          "type": "string",
          "description": "Twitter handle for twitter:creator meta tag (e.g., @username)"
        },
        "twitterSite": {
          "type": "string",
          "description": "Twitter site handle, defaults to twitterHandle if not specified"
        },
        "defaultAuthor": {
          "type": "string",
          "description": "Default author name for article metadata"
        },
        "defaultKeywords": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Default keywords applied to all pages"
        },
        "enableJsonLd": {
          "type": "boolean",
          "default": true,
          "description": "Enable JSON-LD structured data generation"
        },
        "organizationName": {
          "type": "string",
          "description": "Organization name for JSON-LD publisher info"
        },
        "organizationLogo": {
          "type": "string",
          "description": "Organization logo URL for JSON-LD structured data"
        },
        "articleType": {
          "type": "string",
          "enum": ["TechArticle", "Article"],
          "default": "TechArticle",
          "description": "Default article type for JSON-LD: TechArticle for technical docs, Article for general"
        },
        "autoCanonical": {
          "type": "boolean",
          "default": true,
          "description": "Automatically generate canonical URLs for pages"
        },
        "enableBreadcrumbs": {
          "type": "boolean",
          "default": true,
          "description": "Enable breadcrumb JSON-LD structured data"
        }
      }
    },
    "i18n": {
      "type": "object",
      "description": "Internationalization configuration",
      "properties": {
        "defaultLocale": {
          "type": "string",
          "default": "en",
          "description": "The default locale for the documentation site"
        },
        "locales": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["en"],
          "description": "List of supported locales (e.g., ['en', 'es', 'fr'])"
        },
        "routing": {
          "type": "object",
          "properties": {
            "prefixDefaultLocale": {
              "type": "boolean",
              "default": false,
              "description": "Whether to include the default locale in the URL path"
            }
          }
        },
        "translations": {
          "type": "object",
          "description": "Custom translations for UI strings, keyed by locale",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        }
      }
    },
    "versioning": {
      "type": "object",
      "description": "Documentation versioning configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable versioning support"
        },
        "defaultVersion": {
          "type": "string",
          "description": "Default version to display (e.g., 'latest', 'v2')"
        },
        "versions": {
          "type": "array",
          "description": "List of available versions",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Version identifier (e.g., 'v1', 'v2', 'latest')"
              },
              "label": {
                "type": "string",
                "description": "Display label (e.g., 'Version 1.0', 'Latest')"
              },
              "path": {
                "type": "string",
                "description": "Folder path for this version (e.g., 'v1', 'latest')"
              },
              "deprecated": {
                "type": "boolean",
                "default": false,
                "description": "Mark version as deprecated"
              }
            },
            "required": ["id", "label", "path"]
          }
        },
        "versionBanner": {
          "type": "object",
          "description": "Banner configuration for non-latest versions",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Show a banner on non-latest version pages"
            },
            "message": {
              "type": "string",
              "default": "You are viewing documentation for an older version.",
              "description": "Banner message (use {version} and {latest} placeholders)"
            }
          }
        }
      }
    },
    "landing": {
      "type": "object",
      "description": "Landing page configuration. Supports custom HTML landing pages, section-based layouts, and custom navbar/footer for the landing page only.",
      "properties": {
        "enabled": { "type": "boolean", "default": true, "description": "Enable landing page (set false to go straight to docs)" },
        "type": {
          "type": "string",
          "enum": ["none", "default", "config", "custom", "sections"],
          "default": "default",
          "description": "Landing type: 'none' (no landing), 'default' (template landing), 'config' (from config), 'custom' (full HTML from _landing/), 'sections' (mix)"
        },
        "source": {
          "type": "string",
          "default": "_landing",
          "description": "Folder name for custom landing files (relative to docs root)"
        },
        "hero": { "type": "object", "description": "Hero section configuration (for type: config)" },
        "features": { "type": "array", "description": "Features section items (for type: config)" },
        "navbar": {
          "oneOf": [
            {
              "const": false,
              "description": "Set to false to hide the navbar on the landing page"
            },
            {
              "type": "object",
              "description": "Custom navbar for the landing page only. Place navbar.html in _landing/ folder or specify a path here.",
              "properties": {
                "html": {
                  "type": "string",
                  "description": "Path to custom navbar HTML file (relative to docs root, e.g., '_landing/navbar.html')"
                }
              }
            }
          ]
        },
        "footer": {
          "oneOf": [
            {
              "const": false,
              "description": "Set to false to hide the footer on the landing page"
            },
            {
              "type": "object",
              "description": "Custom footer for the landing page only. Place footer.html in _landing/ folder or specify a path here.",
              "properties": {
                "html": {
                  "type": "string",
                  "description": "Path to custom footer HTML file (relative to docs root, e.g., '_landing/footer.html')"
                }
              }
            }
          ]
        },
        "sections": {
          "type": "array",
          "description": "Section definitions (for type: sections)",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "Section type: 'hero', 'features', 'cta', 'custom', etc."
              },
              "source": {
                "type": "string",
                "enum": ["default", "custom"],
                "description": "Use 'default' for template component, 'custom' for HTML file"
              },
              "html": {
                "type": "string",
                "description": "Path to custom HTML file for this section (when type is 'custom')"
              },
              "props": {
                "type": "object",
                "description": "Props to pass to default section components"
              }
            },
            "required": ["type"]
          }
        }
      }
    },
    "announcement": {
      "type": "object",
      "description": "Announcement bar displayed above the navbar",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "text": { "type": "string", "description": "Announcement text content" },
        "href": { "type": "string", "description": "Optional link for the announcement" },
        "dismissible": { "type": "boolean", "default": true, "description": "Allow users to dismiss the announcement" },
        "variant": {
          "type": "string",
          "enum": ["default", "info", "success", "warning"],
          "default": "default",
          "description": "Visual style variant"
        }
      }
    },
    "assets": {
      "type": "object",
      "description": "Custom assets configuration",
      "properties": {
        "images": {
          "type": "string",
          "default": "_images",
          "description": "Folder name for custom images (copied to public/images/)"
        },
        "css": {
          "type": "string",
          "default": "_css",
          "description": "Folder name for custom CSS files"
        },
        "static": {
          "type": "string",
          "default": "_assets",
          "description": "Folder name for static assets (copied to public/assets/)"
        }
      }
    }
  }
}
